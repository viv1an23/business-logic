<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.country) }}
            </div>
                <div class="col-md-6">
                    {{ form_row(form.moneyBalance) }}
                </div>
            <div class="col-md-12">
                <div class="text-end">
                    <button class="btn btn-primary">{{ submit_button_label|default('Submit') }}</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
